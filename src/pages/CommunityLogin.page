<apex:page standardStylesheets="false" id="Login" sidebar="false" showQuickActionVfHeader="false" showHeader="false" cache="true" controller="SiteLoginController">

    <head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta name="description" content=""/>
    <meta name="author" content=""/>
    <title>NXP TechSupport Community</title>
    <apex:stylesheet value="{!URLFOR($Resource.Forum_Community_3, 'NXP-community/css/font-awesome.css')}" ></apex:stylesheet>      
    <apex:stylesheet value="{!URLFOR($Resource.Forum_Community_3, 'NXP-community/css/hover.css')}" ></apex:stylesheet>
    <apex:stylesheet value="{!URLFOR($Resource.Forum_Community_3, 'NXP-community/css/main.css')}" ></apex:stylesheet>
    </head>

    <body >
    <c:CommunityHeaderComponent ></c:CommunityHeaderComponent>
        <br/><br/>
  <!-- Community Navigtion -->
    <div class="container h-spacer navigation">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-10 col-sm-10">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="#">NXP Community</a>
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                       
                    </div>
                </div>
            </div>
        </nav>
    </div>
   

    <apex:form styleclass="form-horizontal"  forceSSL="True" id="LoginForm">
        <div class="container">
            <apex:pageMessages ></apex:pageMessages>
            <apex:outputLink id="emailLink"  value="/community/CommunitiesResendEmailVerfication?email={!username}" rendered="{!isResend}">Resend verification email</apex:outputLink>
            <br/><div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <h4>Login with the details you registered on this page:</h4>
                    <div class="h-spacer">&nbsp;</div>
                    <fieldset>
                        <div class="form-group">
                            <div class="col-md-3" for="User Name">User Name</div>
                            <div class="col-md-6 col-sm-9 col-xs-9">
                                <apex:inputText value="{!username}" id="Username" required="true" styleclass="form-control input-question" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3" for="Password">Password</div>
                            <div class="col-md-6 col-sm-9 col-xs-9">
                                <apex:inputSecret id="Password" required="true"  value="{!password}"  styleclass="form-control"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3 col-sm-0 col-xs-0"></div>
                            <div class="col-md-9 col-sm-12 col-xs-12">
                                <input type="checkbox" value=""/> Remember Me
                            </div>

                            
                        </div>
                        
                        <div class="form-group">
                            <div class="col-md-3 col-sm-0 col-xs-0"></div>
                            <div class="col-md-9 col-sm-12 col-xs-12">
                                Do not use "Remember Me" on a public or shared computer
                            </div>
                        </div>
                        
                        <br/>
                        <div class="form-group">
                            <div class="col-md-12">
                                <a href="/community/ForgotPassword_Community"><span class="glyphicon glyphicon-chevron-right"></span> Forgot Your Password?</a>
                            </div>
                            <div class="col-md-12">
                                 <apex:outputPanel style="color: #1d6f8a;">
                                 <span class="glyphicon glyphicon-chevron-right"></span>
                                    New user for the support ticket system? </apex:outputPanel>
                                <u><apex:outputPanel rendered="{!(isRedirect)}">
                            		<a href="/community/communityRegistration?pagename={!strPageName}">Please register here</a>
                            	</apex:outputPanel></u>
                            	<u><apex:outputPanel rendered="{!(isRedirect=false)}">
                            		<a href="/community/communityRegistration">Please register here</a>
                            	</apex:outputPanel></u>
                            </div>
                            <div class="col-md-12">
                                <a href="{!InternalUserSignInUrl}"><span class="glyphicon glyphicon-chevron-right"></span> Sign In as Internal User</a>

                            </div>
                        </div>
                        
                        <div class="form-group">
                            <div class="col-md-12">
                            <apex:commandButton styleClass="btn btn-primary" style="border-radius:0px;background-color:#007088;margin-bottom:100px;" value="Login" action="{!login}" id="submitbutton"/>
                            </div>
                        </div>
                    </fieldset>                       
                </div>
            </div>
        </div>
    </apex:form>

    <c:CommunityFooterComponent ></c:CommunityFooterComponent>


    <div class="h-spacer"></div>
    


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="{!URLFOR($Resource.Forum_Community_3,'NXP-community/js/bootstrap.js')}"></script>
    <script src="{!URLFOR($Resource.Forum_Community_3,'NXP-community/js/collapse.js')}"></script>
    <script src="{!URLFOR($Resource.Forum_Community_3,'NXP-community/js/nxp-community.js')}"></script>
    

    </body>

</apex:page>