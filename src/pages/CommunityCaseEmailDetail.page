                        	,&nbsp;<apex:outputField value="{!objEmailMsg.createddate}"  styleclass="btn btn-default dropdown-toggle input-form" id="dropdown-msgcreatedbydate"/>

                        </div>
                    </div>
                    
                    
                </div>
                <div class="col-md-6 col-xs-6">
                    <div class="form-group">
                        <label class="control-label col-md-4" for="dropdown-category">Status</label>
                        <div class="control-label col-md-8">
                            <apex:outputField value="{!objEmailMsg.status}"  styleclass="btn btn-default dropdown-toggle input-form" id="dropdown-status"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" for="dropdown-sub-category">Modified By</label>
                        <div class="control-label col-md-8" id="selectList">
