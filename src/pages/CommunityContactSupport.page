<script>
// Mutation object
var MutationObserver = window.MutationObserver || window.WebKitMutationObserver || window.MozMutationObserver;

// Defining observer 
var observer = new MutationObserver(function(mutations) { 
    // If the 'btn btn-default dropdown-toggle btn-lg' was removed from the list - re-assign it
    if(!jQuery('#selectList select').first().hasClass('btn btn-default dropdown-toggle input-form')){
        jQuery('#selectList select').first().addClass('btn btn-default dropdown-toggle input-form');
    }
    if(!jQuery('#selectList1 select').first().hasClass('btn btn-default dropdown-toggle input-form')){
        jQuery('#selectList1 select').first().addClass('btn btn-default dropdown-toggle input-form');
    }
    if(!jQuery('#selectList2 select').first().hasClass('btn btn-default dropdown-toggle input-form')){
        jQuery('#selectList2 select').first().addClass('btn btn-default dropdown-toggle input-form');
    }
});

// A target object fot the observer
var myNode = document.querySelector('#selectList'); 
var myNode1 = document.querySelector('#selectList1');
var myNode2=document.querySelector('#selectList2');
// Assigning observer to the dependent picklist
observer.observe(myNode, {
    childList: true,
    subtree: true,
    attributes: true
});
observer.observe(myNode1, {
    childList: true,
    subtree: true,
    attributes: true
});
observer.observe(myNode2, {
    childList: true,
    subtree: true,
    attributes: true
});
</script>
